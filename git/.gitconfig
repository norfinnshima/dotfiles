[core]
	excludesfile = /Users/xxxxx/.gitignore_global
	quotepath = false
[user]
	name = xxxxx
	email = xxxxx@xxxxx
[init]
	defaultBranch = main
[alias]
	st = status
	adl = add --all
	cm = commit -m
	lg = log --graph
	df = diff
	ch = checkout
	br = branch
[status]
	showUntrackedFiles = all
[merge]
	conflictStyle = zdiff3
[color]
	ui = auto

[includeIf "gitdir:~/work/"]
	path = ~/.gitconfig-work
[includeIf "gitdir:~/workspace/xxxxx/"]
	path = ~/.gitconfig-dev
[includeIf "gitdir:~/workspace/xxxxx/"]
	path = ~/.gitconfig-private
